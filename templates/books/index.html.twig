{% extends 'base.html.twig' %}

{% block title %}Hello BooksController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table td.center {
        text-align:center;
    }
    .tabHeader{ border-bottom:1px solid #eee; margin-bottom:10px;}
</style>

<div class="example-wrapper">
    <h1>Cart Items</h1>

    <table>
    <thead>
        <tr class="tabheader">
        <th>Book Title</th>
        <th>Quantity </th>
        <th>Unit Cost</th>
        </tr>
    </thead>
    {% for key, value in items %}

        <tr>
            <td>{{key}}</td>
            <td class="center">{{value}}</td>
            <td class="center"> $ 8 </td>
        </tr>
    {% endfor %}

    <tr>
    <td colspan=2> </td> <td>Total: {{cartAmount}}</td>
    </tr>
    <tr>
    <td colspan=2> </td> <td>Discount: {{discountAmount}}</td>
    </tr>
    
    </table>
    
</div>
{% endblock %}
